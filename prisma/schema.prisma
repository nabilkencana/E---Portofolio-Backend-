generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["metrics"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  name            String?
  password        String
  emailVerified   Boolean   @default(false)
  refreshToken    String?
  refreshTokenExp DateTime?
  role            UserRole  @default(USER)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  //              Relations
  profile        Profile?
  achievements   Achievement[]
  experiences    Experience[]
  educations     Education[]
  skills         Skill[]
  subjects       Subject[]
  teacher_detail TeacherDetail?

  @@map("users")
}

// Profile Backend
model Profile {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String?
  nip       String?  @unique
  email     String?
  phone     String?
  schoolId  String?
  school    School?  @relation(fields: [schoolId], references: [id])
  avatarUrl String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("profiles")
}

// Update model School
model School {
  id            String   @id @default(cuid())
  npsn          String?  @unique // Nomor Pokok Sekolah Nasional
  schoolCode    String?  @unique // Kode sekolah
  schoolName    String
  schoolType    String // SD, SMP, SMA, SMK, SLB
  schoolLevel   String? // NEGERI, SWASTA
  address       String?
  village       String? // Desa/Kelurahan
  subdistrict   String? // Kecamatan
  city          String? // Kota/Kabupaten
  province      String?
  postalCode    String?
  phone         String?
  email         String?
  website       String?
  accreditation String? // A, B, C, atau Belum Terakreditasi
  latitude      Float?
  longitude     Float?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  users Profile[]

  @@map("schools")
}

model TeacherDetail {
  id                  String   @id @default(cuid())
  userId              String   @unique
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  subjectTaught       String?
  competencies        String?
  educationLevel      String?
  yearsOfExperience   Int?
  teachingCertificate String?
  certificationNumber String?
  specialization      String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@map("teacher_details")
}

enum UserRole {
  USER
  ADMIN
  SUPER_ADMIN
}

model VerificationToken {
  id         String   @id @default(cuid())
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Achievement {
  id               String    @id @default(cuid())
  userId           String
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  title            String
  type             String    @default("prestasi") // prestasi atau sertifikat
  description      String?
  level            String? // sekolah, kecamatan, kabupaten, provinsi, nasional, internasional
  year             Int?
  validationStatus Status    @default(PENDING)
  rejectionNotes   String?
  proofFilePath    String? // URL ke Cloudinary
  proofPublicId    String? // Cloudinary public ID
  fileSize         Int? // Ukuran file dalam bytes
  fileType         String? // Mime type
  originalFileName String? // Nama file asli
  resourceType     String? // 'image', 'raw', 'video' - untuk Cloudinary resource type
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  Category         Category? @relation(fields: [categoryId], references: [id])
  categoryId       String?

  @@map("achievements")
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  type      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  achievements Achievement[]

  @@map("categories")
}

enum Status {
  PENDING
  APPROVED
  REJECTED
  REVISION
}

model Experience {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  company     String
  position    String
  description String?
  startDate   DateTime
  endDate     DateTime?
  isCurrent   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("experiences")
}

model Education {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  institution String
  degree      String
  field       String?
  startYear   Int
  endYear     Int?
  isCurrent   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("educations")
}

model Skill {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  level     String   @default("INTERMEDIATE")
  category  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("skills")
}

model Subject {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  level     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("subjects")
}
